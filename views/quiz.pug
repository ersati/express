extends layout

block content
  h1= title
  if show
    form(method='post')
    p Whats is your favourite time of the year?
      ul
        each item in data
          li
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Vote for')
      p If you want see result Vote please
  else
    h1 You're already vote
    p score:
    ul
    each item in data
      li #{item.title} vote: #{item.vote} (#{Math.round(item.vote/sum*100)}%)
    p Total vote: #{sum}